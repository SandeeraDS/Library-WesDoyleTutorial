@model Library.Models.Catalog.AssetIndexModel

@{
    ViewBag.Title = "Library Catalog Index";
}



<div id="assets">
    <h3>@ViewBag.Title</h3>
    <div id="assetsTable">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author / Director</th>
                    <th>Dewey Call Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assets in Model.Assets)
                {
                    <tr class="assetRow">
                        <td class="">
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@assets.Id">
                                <img src="@assets.ImageUrl" class="imageCell" />
                            </a>
                        </td>
                        <td class="">@assets.Title</td>
                        <td class="">@assets.AuthorOrDirector</td>
                        <td class="">@assets.DeweyCallNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

